#!/bin/bash

i="1"
j="10"
while [ $i -le $j ]
do
	echo -e "RUN"
	START=$(date +%s.%N)
	sudo nomad run -detach "example$i.nomad"
	#sudo nomad run "example$i.nomad"
	END=$(date +%s.%N)
	DIFF=$(echo "($END - $START)*1000" | bc)
	echo -e "Executed in $DIFF ms"
	#sleep 0.01
	i=$[$i+1]
done

